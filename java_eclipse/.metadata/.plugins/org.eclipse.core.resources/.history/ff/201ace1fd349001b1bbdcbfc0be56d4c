package zimski_zadatci;

import java.util.Arrays;

public class Zadatak05 {

	public static void main(String[] args) {
		// Kreirati program koji ispisuje cikliÄnu matricu - ulaz
		// su dva cijela broja

		int stupac = 4, redak = 3;

		int[][] m = new int[redak][stupac];
		
		int redakM=redak-1, stupacM=stupac-1;
		int redakm=0, stupacm=0;
		int broj=redak*stupac+1;

		
		while(m[redak][stupac]>0) {
			
			// (redak) desno -> lijevo
			for(int i=stupacM; i>stupacm; i--) {
				m[redakM][i]-=broj;
				if(m[redak][stupac]>0) {
					return;
				}
			}
			
			//(stupac) dolje->gore
			for(int i=redakM; i>redakm; i--) {
				m[i][stupacm]-=broj;
				if(m[redak][stupac]>0) {
					return;
				}
			}
			
			//(redak) lijevo -> desno
			for(int i=stupacm; i<stupacM; i++) {
				m[redakm][i]-=broj;
				if(m[redak][stupac]>0) {
					return;
				}
			}
			
			//(stupac) gore -> dolje
			for(int i=redakm; i>redakM; i++) {
				m[i][stupacM]-=broj;
				if(m[redak][stupac]>0) {
					return;
				}
			}
			
			stupacM=stupacM--;
			stupacm=stupacm++;
			redakM=redakM--;
			redakm=redakm++;
			
			
			
		}
			
		System.out.print(Arrays.deepToString(m));	
			
			
			
			
			
		 
		 
		}
		
	
		
		
		
	}


